
<h1>Status Dashboard</h1>

<div class="list-group">
  <% @users.each do |u| %>
    <%= content_tag(:li, nil, :class => "list-group-item #{u.status.status.delete(' ').downcase}") do %>
    <div class="row">
    <div class="status-item"><div class="col-md-9"><%= u.name%></div><div class="col-md-3 status-text"> <%= u.status.status %></div></div>
   </div>
    <%end %>

  <% end %>
</div>

<br>

