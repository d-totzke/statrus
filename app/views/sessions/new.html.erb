<%= form_tag sessions_path, class: "login-form" do %>
  <h1 class="login-header">Status Pages</h1>
        <%= email_field_tag :email, nil, :placeholder => "Email", class: "login-form-field", :required => true %>

        <%= password_field_tag :password, nil, :placeholder => "Password", class: "login-form-field", :required => true%>
    <p>
      <%= submit_tag 'Sign In', class: "login-form-button"%>
    </p>
  </fieldset>
<% end %>